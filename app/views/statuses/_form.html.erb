<% if user_signed_in? && current_user == @project.user %>
<%= form_for [@project, Status.new] do |f| %>
  <% if @status && @status.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@status.errors.count, "error") %> prohibited this status from being saved:</h2>

      <ul>
      <% @status.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group project-entrie">
    <!-- <%= f.label :title %><br> -->
    <%= f.text_field :title, class: "form-control", placeholder: "Título", style: "border-color: #ecf0f1;"   %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <hr style="border: none; margin:10px 0;">
    <!-- <%= f.label :description %><br> -->
    <%= f.text_area :description, class: "form-control", placeholder: "Descrição", style: "border-color: #ecf0f1;"  %>
  </div>
  <div class="actions">
    <%= f.submit 'Atualizar', :class => 'btn btn-primary btn-sm pull-right'  %>
  </div>
<% end %>
<% end %>
