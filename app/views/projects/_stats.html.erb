<div class="tab-pane" id="stats">
  <div class="box">
    <div class="box-header white text-muted">
      <h3>Stats</h3>
    </div>
    <% if user_signed_in? && current_user.id == @project.user_id && @project.project_entries.count > 0 %>
    <div class="p-x p-y-0">
      <div class="row no-gutter">
        <div class="col-xs-6 b-r text-blue-hover text-dark">
          <a class="p-a block text-right">
            <span class="block">Sumbitted Entries</span>
            <big class="block text-lg _800"><%= @project.project_entries.count %></big>
          </a>
          <div class="list-group m-b no-borders text-right">
            <a href="" class="list-group-item">
              <span class="m-r">Ideas</span>
              <% if @project.has_ideas? %>
                <span class="text-white label primary"><%= @project.ideas.count %></span>
              <% else %>
                <span class="text-white label danger">0</span>
              <% end %>
            </a>
            <a href="" class="list-group-item">
              <span class="m-r">Resources</span>
              <% if @project.has_resources? %>
                <span class="text-white label primary"><%= @project.resources.count %></span>
              <% else %>
                <span class="text-white label danger">0</span>
              <% end %>
            </a>
            <a href="" class="list-group-item">
              <span class="m-r">Applications</span>
              <% if @project.has_appliances? %>
                <span class="text-white label primary"><%= @project.appliances.count %></span>
              <% else %>
                <span class="text-white label danger">0</span>
              <% end %>
            </a>
          </div>
        </div>
        <div class="col-xs-6 text-blue-hover text-dark">
          <a class="p-a block text-left">
            <span class="block">Accepted Entries</span>
            <big class="block text-lg _800"><%= @project.accepted_project_entries.count %></big>
          </a>
          <div class="list-group m-b no-borders">
            <a href="" class="list-group-item">
              <% if @project.has_accepted_ideas? %>
                <span class="text-white label primary"><%= @project.accepted_ideas.count %></span>
              <% else %>
                <span class="text-white label danger">0</span>
              <% end %>
              <span class="m-l">Ideas</span>
            </a>
            <a href="" class="list-group-item">
              <% if @project.has_accepted_resources? %>
                <span class="text-white label primary"><%= @project.accepted_resources.count %></span>
              <% else %>
                <span class="text-white label danger">0</span>
              <% end %>
              <span class="m-l">Resources</span>
            </a>
            <a href="" class="list-group-item">
              <% if @project.has_accepted_appliances? %>
                <span class="text-white label primary"><%= @project.accepted_appliances.count %></span>
              <% else %>
                <span class="text-white label danger">0</span>
              <% end %>
              <span class="m-l">Applications</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
