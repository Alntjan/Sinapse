<div class="container-fluid text-center" style="min-height: 100vh; background-color:#34495e; color: #fff;">
  <div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
    <h2 class="text-center" style="text-transform:uppercase;">Registar</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <label for="" class="control-label" style="color:#ecf0f1; text-align:left !important;">Titulo</label>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <label for="" class="control-label" style="color:#ecf0f1; text-align:left !important;">Descrição</label>
        <%= f.text_field :description, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <label for="" class="control-label" style="color:#ecf0f1; text-align:left !important;">Email</label>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <label for="" class="control-label" style="color:#ecf0f1; text-align:left !important;">Password</label>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres no mínimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <label for="" class="control-label" style="color:#ecf0f1; text-align:left !important;">Confirmação de Password</label>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Registar", :class => 'btn btn-primary btn-block'   %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
