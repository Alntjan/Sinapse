<div class="container" style="padding-top:25px;">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <div class="jumbotron projects-jumbotron" style="padding:25px; margin:0; border-bottom-left-radius:0; border-bottom-right-radius:0; border-bottom:0;">
        <div class="container">
          <h1 class="text-center" style="margin:0;"><big class="icon-pen" style="display: block;"></big>
            Registar</h1>
        </div>
      </div>
      <div class="project">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <label for="" class="control-label">Nome</label>
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <label for="" class="control-label">Descrição</label>
            <%= f.text_field :description, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <label for="" class="control-label">Email</label>
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <label for="" class="control-label">Password</label>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caracteres no mínimo)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="form-group">
            <label for="" class="control-label">Confirmação de Password</label>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit "Registar", :class => 'btn btn-primary btn-block'   %>
          </div>
        <% end %>
        <hr>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
