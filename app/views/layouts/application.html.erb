<!DOCTYPE html>
<html lang="pt">
<head>
  <title>Sinapse</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css"> -->


  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <!-- Latest compiled and minified CSS -->
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <!-- Latest compiled and minified JavaScript -->
  <!-- <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script> -->

  <%= csrf_meta_tags %>
</head>
<body>
  <%= render '/layouts/aside' %>
  <div id="content" class="app-content box-shadow-z0 ng-scope" role="main">
    <%= render '/layouts/navbar' %>


  <% unless current_page?(controller: '/projects', action: 'home') %>
  <nav class="navbar navbar-default <%= controller.controller_name %>-<%= controller.action_name %> hidden-xs-up">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand hidden-xs" href="/">Sinapse</a>
        <ul class="nav navbar-nav">
            <li><a href="/projects"><span class="icon-lab"></span><span class="tool">Projectos</span></a></li>
            <li><a href="/ideas"><span class="icon-bulb"></span><span class="tool">Ideias</span></a></li>
            <li><a href="/resources"><span class="icon-diamond"></span><span class="tool">Recursos</span></a></li>
            <li><a href="/users"><span class="icon-user"></span><span class="tool">Pessoas</span></a></li>
          </ul>
          <% if user_signed_in? %>
          <ul class="nav navbar-nav navbar-right pull-right">

            <!-- <li><a><span class="icon-stack"></span><div class="badger">1</div></a></li> -->
            <li><%= link_to user_path(current_user.id), :class => "" do %><span class="icon-user"></span><% end %></li>
            <li class="dropdown hidden-xs">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="icon-settings"></span></a>
              <ul class="dropdown-menu" style="padding:0;">
                <li><%= link_to current_user.name, user_path(current_user.id), class: "", style: "color:#000000 !important;" %></li>
                <li><%= link_to "Editar Perfil", edit_user_registration_path, class: "", style: "color:#000000 !important;" %></li>
                <li><%= link_to "Logout", logout_path, class: "btn-logout" %></li>
              </ul>
            </li>
          </ul>

            <!-- <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-default navbar-btn navbar-right btn-logout" %>
            <%= link_to current_user.name, edit_user_registration_path, class: "btn navbar-btn navbar-right" %> -->
          <% else %>
            <%= link_to "", register_path, class: "btn icon-pen navbar-btn navbar-right" %>
            <%= link_to "", login_path, class: "btn icon-key navbar-btn navbar-right" %>

          <% end %>
      </div>

    </div>
  </nav>
  <% end %>
  <% flash.each do |type, message| %>
    <div class="alert <%= flash_class type %> alert-dismissible text-center" role="alert" style="padding-left:35px; border-radius:0; margin:0;">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <span class="<%= type %>"><%= message %></span>
    </div>
  <% end %>
  <div class="app-body">
    <%= yield %>

  </div>
</div>

</body>
</html>
