<!DOCTYPE html>
<html>
<head>
  <title>Sinapse</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <!-- Latest compiled and minified CSS -->
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

  <%= csrf_meta_tags %>
</head>
<body>
  <% unless current_page?(controller: '/projects', action: 'home') %>
  <nav class="navbar navbar-default <%= controller.controller_name %>-<%= controller.action_name %>">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-4" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Sinapse</a>
        <ul class="nav navbar-nav">
            <li><a href="/projects"><span class="icon-lab"></span><span class="tool">Projectos</span></a></li>
            <li><a href="/ideas"><span class="icon-bulb"></span><span class="tool">Ideias</span></a></li>
            <li><a href="/resources"><span class="icon-diamond"></span><span class="tool">Recursos</span></a></li>
            <li><a href="/users"><span class="icon-user"></span><span class="tool">Pessoas</span></a></li>
          </ul>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-4">
        <% if user_signed_in? %>
        <ul class="nav navbar-nav navbar-right">
          <li><a><span class="icon-stack"></span><div class="badger">1</div></a></li>
          <li><%= link_to user_path(current_user.id), :class => "" do %><span class="icon-user"></span><% end %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="icon-settings"></span></a>
            <ul class="dropdown-menu" style="padding:0;">
              <li><%= link_to current_user.name, user_path(current_user.id), class: "", style: "color:#000000 !important;" %></li>
              <li><%= link_to "Editar Perfil", edit_user_registration_path, class: "", style: "color:#000000 !important;" %></li>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn-logout" %></li>
            </ul>
          </li>
        </ul>

          <!-- <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-default navbar-btn navbar-right btn-logout" %>
          <%= link_to current_user.name, edit_user_registration_path, class: "btn navbar-btn navbar-right" %> -->
        <% else %>
          <%= link_to "", new_user_registration_path, class: "btn icon-pen navbar-btn navbar-right" %>
          <%= link_to "", new_user_session_path, class: "btn icon-key navbar-btn navbar-right" %>

        <% end %>
      </div>
    </div>
  </nav>
  <% end %>
  <% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible text-center" role="alert" style="padding-left:35px; border-radius:0; margin:0;">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong>Sucesso!</strong> <span class="notice"><%= notice %></span>
    </div>
    <p class="alert" style="position:absolute; top:55px;"><%= alert %></p>
  <% end %>
<%= yield %>

</body>
</html>
