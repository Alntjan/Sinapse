  <h1><%= @project.title %></h1>
    <h1><%= @project.id %></h1>
  <p>Queres mesmo pedir autorização para ver o projecto?</p>
  <%= form_for [@project, ProjectFriendship.new] do |form| %>
    <%= form.hidden_field :project_id, :value => @project.id %>
